# Flask secret key (gere uma string aleatória segura)
SECRET_KEY=change-me-to-a-random-secret-key

# CSRF token timeout (em segundos, padrão: 28800 = 8 horas)
# WTF_CSRF_TIME_LIMIT=28800

# Database
# Para Cloudflare D1 (recomendado para produção com Cloudflare Pages):
# Configure o D1 no wrangler.toml (já configurado) e use variáveis de ambiente
# via dashboard do Cloudflare Pages. A conexão é feita via binding "DB".
# O schema está em schema.d1.sql

# Para desenvolvimento local (SQLite):
# DATABASE_URL=sqlite:///instance/app.db

# Para PostgreSQL (alternativa se não usar D1):
# DATABASE_URL=postgresql://user:password@host:port/dbname

# E-mail (opcional, mas necessário para verificação de e-mail, reset de senha)
# Para Brevo (recomendado):
MAIL_SERVER=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USE_TLS=true
# IMPORTANTE: Para Brevo, use a SMTP Key (xsmtpsib-...) em AMBOS username e password
MAIL_USERNAME=xsmtpsib-sua-chave-smtp-aqui
MAIL_PASSWORD=xsmtpsib-sua-chave-smtp-aqui
# O email remetente DEVE estar verificado no Brevo
MAIL_DEFAULT_SENDER=no-reply@gramatike.com.br
MAIL_SENDER_NAME=Gramátike

# Alternativa - Office 365:
# MAIL_SERVER=smtp.office365.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=seu-email@dominio.com
# MAIL_PASSWORD=sua-senha
# MAIL_DEFAULT_SENDER=seu-email@dominio.com
# MAIL_SENDER_NAME=Gramátike

# Cloudflare R2 Storage (necessário para upload de arquivos em ambientes serverless)
CLOUDFLARE_ACCOUNT_ID=seu-account-id-aqui
CLOUDFLARE_R2_ACCESS_KEY_ID=sua-access-key-id-aqui
CLOUDFLARE_R2_SECRET_ACCESS_KEY=sua-secret-access-key-aqui
CLOUDFLARE_R2_BUCKET=gramatike
# URL pública do bucket (domínio personalizado ou r2.dev)
CLOUDFLARE_R2_PUBLIC_URL=https://seu-dominio.r2.dev

# RAG/IA (opcional)
RAG_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

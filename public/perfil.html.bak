<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Perfil - Gramátike</title>
  <link href="https://fonts.googleapis.com/css2?family=Mansalva&family=Nunito:wght@300;400;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --roxo: #9B5DE5;
      --roxo-claro: #f9f6ff;
      --roxo-super-claro: #f7f2ff;
      --lilas-light: #f6f5fa;
      --card-radius: 22px;
      --shadow-card: 0 6px 30px 0 #9b5de51a, 0 1px 4px #9B5DE521;
      --shadow-btn: 0 1.5px 7px #9B5DE529;
    }
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      background: var(--roxo);
      font-family: 'Nunito', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
      min-height: 100vh;
    }
    nav {
      background: var(--roxo);
      height: 70px;
      position: sticky;
      top: 0;
      z-index: 100;
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 28px;
      box-shadow: 0 1px 3px rgba(155, 93, 229, 0.1);
    }
    .logo {
      font-family: 'Mansalva', cursive;
      font-size: 32px;
      color: white;
      letter-spacing: 0.5px;
      text-decoration: none;
    }
    .main-wrapper {
      background: var(--lilas-light);
      min-height: 100vh;
      padding-top: 0;
      position: relative;
      z-index: 1;
      margin-top: -50px;
      border-top-left-radius: 24px;
      border-top-right-radius: 24px;
    }
    .container {
      max-width: 700px;
      margin: 0 auto;
      padding: 0 30px 30px;
    }
    .profile-card {
      background: #fff;
      border-radius: var(--card-radius);
      box-shadow: var(--shadow-card);
      border: 1px solid #f0e4fd;
      padding: 32px 24px 24px 24px;
      margin-bottom: 30px;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 18px;
    }
    .profile-avatar {
      width: 90px;
      height: 90px;
      border-radius: 50%;
      background: var(--roxo-super-claro);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--roxo);
      font-size: 38px;
      font-weight: bold;
      border: 3px solid #fff;
      box-shadow: 0 2px 10px #9b5de51a;
    }
    .profile-name {
      font-size: 22px;
      font-weight: 700;
      color: #32264c;
      margin-bottom: 2px;
    }
    .profile-username {
      color: #a8a8d0;
      font-size: 15px;
      margin-bottom: 8px;
    }
    .profile-bio {
      color: #32264c;
      font-size: 15px;
      text-align: center;
      margin-bottom: 8px;
    }
    .profile-info {
      color: #a8a8d0;
      font-size: 13px;
      margin-bottom: 2px;
    }
    .profile-stats {
      display: flex;
      gap: 20px;
      margin: 12px 0;
      font-size: 14px;
    }
    .stat-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      cursor: pointer;
    }
    .stat-item:hover {
      opacity: 0.8;
    }
    .stat-number {
      font-weight: 700;
      color: #32264c;
      font-size: 18px;
    }
    .stat-label {
      color: #a8a8d0;
      font-size: 13px;
    }
    .follow-btn {
      background: var(--roxo);
      color: white;
      border: none;
      padding: 10px 32px;
      border-radius: 12px;
      font-weight: 600;
      font-size: 14px;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: var(--shadow-btn);
      margin-top: 8px;
    }
    .follow-btn:hover {
      background: var(--roxo);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(155, 93, 229, 0.3);
    }
    .follow-btn.following {
      background: white;
      color: var(--roxo);
      border: 2px solid var(--roxo);
    }
    .follow-btn.following:hover {
      background: #f9f6ff;
    }
    .follow-btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
    .toast {
      position: fixed;
      bottom: 30px;
      left: 50%;
      transform: translateX(-50%);
      background: #32264c;
      color: white;
      padding: 14px 24px;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      z-index: 9999;
      animation: slideUp 0.3s ease;
    }
    @keyframes slideUp {
      from { opacity: 0; transform: translate(-50%, 20px); }
      to { opacity: 1; transform: translate(-50%, 0); }
    }
    .section-title {
      font-size: 16px;
      font-weight: 600;
      color: #32264c;
      margin-bottom: 15px;
      display: block;
    }
    .posts-list {
      display: flex;
      flex-direction: column;
      gap: 18px;
    }
    .post-card {
      background: #fff;
      border-radius: var(--card-radius);
      box-shadow: var(--shadow-card);
      border: 1px solid #f0e4fd;
      padding: 20px;
      animation: fadeIn 0.5s ease;
    }
    .post-header {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 15px;
    }
    .post-avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: var(--roxo-super-claro);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--roxo);
      font-weight: bold;
      font-size: 18px;
    }
    .post-user-info { flex: 1; }
    .post-username {
      font-weight: 600;
      color: #32264c;
      font-size: 15px;
    }
    .post-time {
      color: #a8a8d0;
      font-size: 13px;
    }
    .post-content {
      color: #32264c;
      font-size: 15px;
      line-height: 1.5;
      margin-bottom: 15px;
      white-space: pre-line;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    @media (max-width: 700px) {
      .container { padding: 0 10px 20px; }
    }
  </style>
</head>
<body>
  <nav>
    <a href="/feed" class="logo">Gramátike</a>
  </nav>
  
  <div class="main-wrapper">
    <div class="container">
      <div class="profile-card">
          <div class="profile-avatar" id="profileAvatar">A</div>
        <div class="profile-name" id="profileName">Nome de Usuárie</div>
        <div class="profile-username" id="profileUsername">@username</div>
        <div class="profile-bio" id="profileBio">Biografia curta de usuárie.</div>
        <div class="profile-stats">
          <div class="stat-item" onclick="showFollowers()">
            <span class="stat-number" id="followersCount">0</span>
            <span class="stat-label">Seguidores</span>
          </div>
          <div class="stat-item" onclick="showFollowing()">
            <span class="stat-number" id="followingCount">0</span>
            <span class="stat-label">Seguindo</span>
          </div>
        </div>
        <button id="followBtn" class="follow-btn" onclick="toggleFollow()" style="display: none;">
          Seguir
        </button>
        <div class="profile-info" id="profileInfo">Entrou em 01/2026</div>
      </div>
      <span class="section-title">Posts recentes</span>
      <div class="posts-list" id="postsList">
        <!-- Posts de usuárie -->
      </div>
    </div>
  </div>
  <script>
    // Get user ID from URL parameter
    const urlParams = new URLSearchParams(window.location.search);
    const userId = urlParams.get('user');
    
    let currentUser = null;
    let profileUser = null;
    let isFollowing = false;
    
    // Load profile data
    async function loadProfile() {
      if (!userId) {
        showToast('ID de usuário não especificado');
        return;
      }
      
      try {
        const response = await fetch(`/api/users/${userId}`);
        const data = await response.json();
        
        if (data.success && data.user) {
          profileUser = data.user;
          displayProfile(data.user);
        } else {
          showToast('Erro ao carregar perfil');
        }
      } catch (error) {
        console.error('Error loading profile:', error);
        showToast('Erro ao carregar perfil');
      }
    }
    
    function displayProfile(user) {
      document.getElementById('profileAvatar').textContent = user.avatar_initials || user.name?.charAt(0) || 'U';
      document.getElementById('profileName').textContent = user.name || 'Usuário';
      document.getElementById('profileUsername').textContent = `@${user.username}`;
      document.getElementById('profileBio').textContent = user.bio || 'Sem biografia';
      document.getElementById('profileInfo').textContent = `Entrou em ${new Date(user.created_at).toLocaleDateString('pt-BR', { month: '2-digit', year: 'numeric' })}`;
      
      // Update stats
      document.getElementById('followersCount').textContent = user.followers_count || 0;
      document.getElementById('followingCount').textContent = user.following_count || 0;
      
      // Update follow button
      isFollowing = user.is_following || false;
      const followBtn = document.getElementById('followBtn');
      
      // Show follow button only if not viewing own profile
      if (user.id !== currentUser?.user_id) {
        followBtn.style.display = 'block';
        updateFollowButton();
      }
    }
    
    function updateFollowButton() {
      const followBtn = document.getElementById('followBtn');
      if (isFollowing) {
        followBtn.textContent = 'Seguindo';
        followBtn.classList.add('following');
      } else {
        followBtn.textContent = 'Seguir';
        followBtn.classList.remove('following');
      }
    }
    
    async function toggleFollow() {
      const followBtn = document.getElementById('followBtn');
      followBtn.disabled = true;
      
      try {
        const method = isFollowing ? 'DELETE' : 'POST';
        const response = await fetch(`/api/users/${userId}/follow`, {
          method: method,
          headers: {
            'Content-Type': 'application/json'
          }
        });
        
        const data = await response.json();
        
        if (data.success) {
          isFollowing = data.following;
          updateFollowButton();
          
          // Update counters
          const followersCount = document.getElementById('followersCount');
          const currentCount = parseInt(followersCount.textContent);
          followersCount.textContent = isFollowing ? currentCount + 1 : currentCount - 1;
          
          showToast(data.message || (isFollowing ? 'Seguindo!' : 'Deixou de seguir'));
        } else {
          if (response.status === 401 || data.errorCode === 'UNAUTHORIZED') {
            showToast('Você precisa estar logado para seguir usuários');
            setTimeout(() => {
              window.location.href = '/login.html';
            }, 2000);
          } else {
            showToast(data.error || 'Erro ao processar solicitação');
          }
        }
      } catch (error) {
        console.error('Error toggling follow:', error);
        showToast('Erro de conexão');
      } finally {
        followBtn.disabled = false;
      }
    }
    
    function showFollowers() {
      showToast('Lista de seguidores em desenvolvimento');
    }
    
    function showFollowing() {
      showToast('Lista de seguindo em desenvolvimento');
    }
    
    function showToast(message) {
      // Remove existing toast
      const existing = document.querySelector('.toast');
      if (existing) existing.remove();
      
      const toast = document.createElement('div');
      toast.className = 'toast';
      toast.textContent = message;
      document.body.appendChild(toast);
      
      setTimeout(() => toast.remove(), 3000);
    }
    
    function formatDate(dateStr) {
      const date = new Date(dateStr);
      const now = new Date();
      const diffMs = now - date;
      const diffMins = Math.floor(diffMs / (1000 * 60));
      const diffHours = Math.floor(diffMs / (1000 * 60 * 60));
      if (diffMins < 1) return 'Agora mesmo';
      if (diffMins < 60) return `${diffMins} min atrás`;
      if (diffHours < 24) return `${diffHours} h atrás`;
      return date.toLocaleString('pt-BR', { day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit' });
    }
    
    // Initialize
    loadProfile();
  </script>
</body>
</html>
